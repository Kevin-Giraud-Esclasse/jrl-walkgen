SOURCE_DIR = @abs_srcdir@
BUILD_DIR = @abs_buildir@

ifndef OPENHRPHOME
OPENHRPHOME=/tmp/
endif

ifndef ROBOT
ROBOT=HRP2JRL
endif

SYSDIR=$(OPENHRPHOME)/Controller/IOserver/sys/plugin

sample:
	if [ -s "$(OPENHRPHOME)/Make.rules" ]; then \
	cd $(SYSDIR);$(MAKE) -f @abs_builddir@/Makefile.user SOURCE_DIR=$(SOURCE_DIR) ROBOT=$(ROBOT) user_all; \
	else \
	echo "No $(OPENHRPHOME)/Make.rules"; \
	fi

sample_clean:
	if [ -s "$(OPENHRPHOME)/Make.rules" ]; then \
	cd $(SYSDIR);$(MAKE) -f @abs_builddir@/Makefile.user SOURCE_DIR=$(SOURCE_DIR) ROBOT=$(ROBOT) user_clean; \
	else \
	echo "No $(OPENHRPHOME)/Make.rules"; \
	fi

sample_install:
	if [ -s "$(OPENHRPHOME)/Make.rules" ]; then \
	cd $(SYSDIR);$(MAKE) -f @abs_builddir@/Makefile.user SOURCE_DIR=$(SOURCE_DIR) ROBOT=$(ROBOT) user_install; \
	else \
	echo "No $(OPENHRPHOME)/Make.rules"; \
	fi 

echo:
	if [ -s "$(OPENHRPHOME)/Make.rules" ]; then \
	cd $(SYSDIR);$(MAKE) -f $(SOURCE_DIR)/Makefile.echo SOURCE_DIR=$(SOURCE_DIR) ROBOT=$(ROBOT); \
	else \
	echo "No $(OPENHRPHOME)/Make.rules"; \
	fi 

echo_clean:
	if [ -s "$(OPENHRPHOME)/Make.rules" ]; then \
	cd $(SYSDIR);$(MAKE) -f $(SOURCE_DIR)/Makefile.echo SOURCE_DIR=$(SOURCE_DIR) ROBOT=$(ROBOT) user_clean; \
	else \
	echo "No $(OPENHRPHOME)/Make.rules"; \
	fi

install:sample_install
clean:sample_clean echo_clean

all: sample

